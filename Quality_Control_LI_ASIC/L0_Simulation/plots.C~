  gInterpreter->Load("newgraph.C+");

  int event , fevent, levent;
  int Nevents = 0;
  char input[10000];

  cout<<"====================================================================\n";
  cout<<"This is a ROOT Macro to plot the results of the ASIC for LI Trigger\n";
 
  cout << "Decision simulator\n";
  cout<<"====================================================================\n";

  /*cout<<"Please, enter the number of events to plot.\n";
