  cout<<"You can plot any event generated by the L1 ASIC simulator.(Remember that the simulator generates events from 0 to Number of events - 1)" << endl;
  cout<<"Please, enter the first event you want to plot." << endl;
  cout<<"First event: ";
  cin.get(input,10000);
  cin.ignore();
  fevent = atoi(input);
  cout<<"Please, enter the last event you want to plot." << endl;
  cout<<"Last event: ";
  cin.get(input,10000);
  cin.ignore();
  levent = atoi(input);

  Nevents = levent - fevent;
  

  if (Nevents > 0){
  
  for (event= fevent; event< levent; event++){

    storedata(event);
    graph(event);
    
  }
  }
}
